<%- include('../partials/header') %>
<!DOCTYPE html>
<html>
<head>
  <title></title>
<link href="https://stackpath.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css" rel="stylesheet">
	
</head>
<div class="container">
	<div class="jumbotron">
      <div class="heading">
		<h1><i class="fas fa-campground campicon">Welcome to Yelpcamp Page</i></h1>
	   <a style="margin-left: 10px; margin-top: 20px;" class="btn btn-lg btn-success" href="/campgrounds/new">Add New Campground</a>
		</div>
	</div>
	<div class="row" style="display: flex; flex-wrap: wrap;">
	  <% campgrounds.forEach(function(campground){ %>
		<div class="col-md-3">
			<div class="thumbnail">
			   <img src="<%=campground.image%>">
			   <div style="tex-align: center; margin-left: 20%; ">
				   <div class="caption">
				   <h4> <%=campground.name%></h4>	
				</div>
                 <p><a class="btn btn-primary" href="/campgrounds/<%=campground._id%>">More Info</a></p>
				</div>
			</div>
	   </div>
	<% }); %>
	</div>
</div>